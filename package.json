{
  "name": "phuture-subgraph",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "graph build",
    "codegen": "graph codegen --output-dir src/types/",
    "env:dev": "npm i && tail -f /dev/null",
    "start": "npm run create:local && npm run deploy:local",
    "prepare:subgraph": "mustache ./config/${NETWORK:-rinkeby}.json subgraph.template.yaml > subgraph.yaml && mustache ./config/${NETWORK:-rinkeby}.json ./src/mappings/consts.template.ts > ./src/mappings/consts.ts",
    "create:local": "graph create phuture/ia --node http://graph-node:8020",
    "deploy:local": "graph deploy phuture/ia --ipfs http://ipfs:5001 --node http://graph-node:8020",
    "deploy:hosted": "graph deploy $SLUG --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --access-token $ACCESS_TOKEN",
    "deploy:local:mainnet": "NETWORK=mainnet env-cmd npm run prepare:subgraph && SLUG=phuture/ia env-cmd npm run deploy:local",
    "deploy:hosted:mainnet": "NETWORK=mainnet env-cmd npm run prepare:subgraph && SLUG=phuture/ia env-cmd npm run deploy:hosted",
    "deploy:hosted:rinkeby": "NETWORK=rinkeby env-cmd npm run prepare:subgraph && SLUG=hvrlk/Phtr env-cmd npm run deploy:hosted"
  },
  "dependencies": {
    "@graphprotocol/graph-ts": "^0.20.0"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.20.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "lint-staged": "^9.2.5",
    "mustache": "^3.1.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  }
}
